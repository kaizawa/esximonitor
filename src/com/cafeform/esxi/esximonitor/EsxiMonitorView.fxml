<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<BorderPane minHeight="-1.0" minWidth="-1.0" prefHeight="200.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.cafeform.esxi.esximonitor.EsxiMonitorViewController">
  <bottom>
    <BorderPane prefHeight="-1.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <left>
        <Label id="status" fx:id="statusLabel" text="" />
      </left>
      <padding>
        <Insets bottom="2.0" left="10.0" right="10.0" top="2.0" />
      </padding>
      <right>
        <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
      </right>
    </BorderPane>
  </bottom>
  <center>
    <TableView fx:id="table" prefHeight="-1.0" prefWidth="-1.0">
      <columns>
        <TableColumn minWidth="10.0" prefWidth="50.0" text="Status" fx:id="statusColumn" />
        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="150.0" text="Operation" fx:id="buttonColumn" />
        <TableColumn prefWidth="100.0" text="VM Name" fx:id="vmNameColumn" />
        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="100.0" text="Server" fx:id="serverColumn" />
        <TableColumn prefWidth="200.0" text="OS" fx:id="osTypeColumn" />
      </columns>
    </TableView>
  </center>
  <top>
    <BorderPane prefHeight="-1.0" prefWidth="200.0">
      <left>
        <HBox alignment="CENTER_LEFT" prefHeight="-1.0" prefWidth="-1.0" spacing="10.0">
          <children>
            <ChoiceBox fx:id="serverComboBox">
              <items>
                <FXCollections fx:factory="observableArrayList">
                  <String fx:value="アイテム1" />
                  <String fx:value="アイテム2" />
                  <String fx:value="アイテム3" />
                </FXCollections>
              </items>
            </ChoiceBox>
            <CheckBox fx:id="showAllCheckBox" mnemonicParsing="false" text="Show All Server" />
          </children>
        </HBox>
      </left>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <right>
        <HBox alignment="CENTER_RIGHT" prefHeight="-1.0" prefWidth="-1.0">
          <children>
            <Button fx:id="updateButton" mnemonicParsing="false" text="Update" />
          </children>
        </HBox>
      </right>
      <BorderPane.margin>
        <Insets />
      </BorderPane.margin>
    </BorderPane>
  </top>
</BorderPane>
